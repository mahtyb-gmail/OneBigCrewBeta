<div class="center hero-unit">
	<h3>My Profile </h3>
	
	<p>
	  <b>Name:</b>
	  <%= @profile.name %>
	</p>
 	<p>
	  <b>email:</b>
	  <%= @profile.email %>
	</p>
	  <b>Location:</b>
	  <%= @profile.location %>
	</p>
	  <b>Title:</b>
	  <%= @profile.title %>
	</p>
	  <b>About Me:</b>
	  <%= @profile.about_me %>
	</p>

	<b>My skills</b>
	<ul>
	  <% @profile.skills.each do |skill| %>
	    <li><%= skill.name %></li>
	  <% end %>
	</ul>
	<%= link_to 'Edit Profile', controller: "users", action: "edit", id: current_user.id %>
	</p>
	<h3>Projects</h3>
	<%= link_to 'Search Projects', dashboard_search_projects_path %>
	</p>
	<% unless @projects.empty? %>
		<h3>My Projects </h3>
		
		<table class="table table-striped">
			<thead>
		  		<tr>
		    		<th>Name</th>
		    		<th>Length</th>
		    		<th>Project type</th>
		    		<th>Hometown</th>
		    		<th>Details</th>
		    		<th>Startdate</th>
		    		<th>Schedule info</th>
		    		<th></th>
		    		<th></th>
		    		<th></th>
		  		</tr>
			</thead>

			<tbody>
				<%= render @projects %>
			</tbody>
		</table>
			
		<%= link_to 'Show Qualified Candidates', dashboard_search_users_path %>
	<% end %>
	<p>
	<%= link_to 'New Project', new_project_path %>
	</p>
	</div>